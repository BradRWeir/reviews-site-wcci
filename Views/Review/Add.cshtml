@model template_csharp_reviews_site.Models.Review

@{
    ViewData["Title"] = "Add Review";
}

<div class="product-index">
    <div class="product-title"><h1>Add Review for @ViewBag.Product.Name</h1></div>
    <div class="product-control">
        <div class="control-button">
            <a asp-action="Index">Cancel</a>
        </div>
    </div>
        <form asp-action="Add" class="card-container">
            <input type="hidden" asp-for="Id" value="0" />
            <input type="hidden" asp-for="ProductId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <li class="card center">
                <div class="card-details-name">
                            
                    <div class="form-group inline">
                        <label asp-for="Title" class="control-label">Title: </label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                </div>

                <div class="card-image-container">
                    <img class="card-image" src="@ViewBag.Product.PictureOrDefault" />
                </div>
                <div class="card-details">
            
                        <div class="form-group">
                            <label asp-for="Content" class="control-label">Content: </label>
                            <input asp-for="Content" class="form-control" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Rating" class="control-label">Rating: </label>
                            <select asp-for="Rating" >
                                <option selected="true" value="0">
                                    0 Stars
                                </option>
                                <option value="1">
                                    1 Stars
                                </option>
                                <option value="2">
                                    2 Stars
                                </option>
                                <option value="3">
                                    3 Stars
                                </option>
                                <option value="4">
                                    4 Stars
                                </option>
                                <option value="5">
                                    5 Stars
                                </option>
                            </select>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label">E-mail: </label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                       
                        
                    </div>
                    
                <div class="card-rating">
                        
                            <div class="card-control-container">
                                <div>
                                    
                                    <div class="card-control-button">
                                         <div class="form-group">
                                            <input type="submit" value="Add" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                    
                </div>
            </li>

            
            

            
            

        </form>
</div>

